{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/YOUR_PIPELINE/master/nextflow_schema.json",
    "title": "Nextflow pipeline parameters",
    "description": "This pipeline uses Nextflow and processes some kind of data. The JSON Schema was built using the nf-core pipeline schema builder.",
    "type": "object",
    "$defs": {
        "input_files": {
            "title": "Input files",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "baseline": {
                    "type": "string",
                    "format": "file-path",
                    "description": "MCPS baseline survey to be used as phenotype file.",
                    "mimetype": "text/csv"
                },
                "kinship": {
                    "type": "string",
                    "description": "KING output file (.seg) containing the relationships between individuals.",
                    "format": "file-path",
                    "pattern": "^.+\\.seg$"
                },
                "bed": {
                    "type": "string",
                    "description": "PLINK file (.bed) to be processed.",
                    "format": "file-path",
                    "pattern": "^.+\\.bed$"
                },
                "bim": {
                    "type": "string",
                    "description": "PLINK file (.bim) to be processed.",
                    "format": "file-path",
                    "pattern": "^.+\\.bim$"
                },
                "fam": {
                    "type": "string",
                    "description": "PLINK file (.fam) to be processed.",
                    "format": "file-path",
                    "pattern": "^.+\\.fam$"
                }
            },
            "required": [
                "baseline",
                "kinship",
                "bedfile",
                "bimfile",
                "famfile"
            ]
        },
        "additional_parameters": {
            "title": "Additional parameters",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "chr_range": {
                    "type": "string",
                    "description": "Range of chromosomes to be used for the analysis. Defaults to all autosomal chromosomes.",
                    "default": "1-22"
                },
                "outDir": {
                    "type": "string",
                    "description": "Name of the output folder. Defaults to 'results'.",
                    "default": "results",
                    "format": "directory-path"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/input_files"
        },
        {
            "$ref": "#/$defs/additional_parameters"
        }
    ]
}